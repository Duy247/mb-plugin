<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.mb.mb-plugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>MBKarate For AutoTest</name>

    <vendor>Duy Van Thanh</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        For Karate framework support in IntelliJ IDEA.
        <br><br>
            Features:
               <ul>
                    <li>Syntax Highlighting</li>
                    <li>Code Completion</li>
                    <li>Go to Definition</li>
                    <li>Find Usages</li>
                    <li>Code Commenting</li>
                    <li><strong>Comprehensive Code Formatting</strong> - Advanced formatting for Karate feature files with configurable indentation, spacing, table alignment, and more</li>
                    <li>Jira Issue Integration - Hover on @MBA-XXXXX tags and use Alt+Enter to open Jira issues in your default browser</li>
               </ul>
          <br><br>
          <strong>New in this version:</strong>
          <ul>
                <li>Complete code style formatting with 25+ configurable options</li>
                <li>Table formatting with vertical pipe alignment</li>
                <li>Scenario outline parameter alignment</li>
                <li>Configurable indentation for all Karate elements</li>
                <li>Smart spacing around keywords, operators, and tables</li>
                <li>Blank line management between sections</li>
                <li>Tag and comment formatting preservation</li>
                <li>Post-processing for edge cases and special Karate syntax</li>
          </ul>
          <br><br>
          Specifically made for App Team's MB project. If you are from another team and trying to copy this, goodluck :)
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.json</depends>
    <depends>org.intellij.intelliLang</depends>

    <!-- Project Services -->
    <projectListeners>
        <listener class="com.mb.mbplugin.jira.JiraProjectListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Karate File Type -->
        <fileType name="Karate"
                  implementationClass="com.mb.mbplugin.karate.psi.GherkinFileType"
                  fieldName="INSTANCE" language="Karate" extensions="feature"/>
        
        <!-- Syntax Highlighting -->
        <lang.syntaxHighlighterFactory language="Karate"
                                       implementationClass="com.mb.mbplugin.karate.psi.GherkinSyntaxHighlighterFactory"/>
        
        <!-- Parser Definition -->
        <lang.parserDefinition language="Karate"
                               implementationClass="com.mb.mbplugin.karate.psi.KarateParserDefinition"/>
        
        <!-- Find Usages Provider -->
        <lang.findUsagesProvider language="Karate"
                                 implementationClass="com.mb.mbplugin.karate.psi.KarateFindUsagesProvider"/>
        
        <!-- Reference Contributor for Go-To Definition -->
        <psi.referenceContributor language="Karate"
                                  implementation="com.mb.mbplugin.karate.steps.reference.KarateReferenceContributor"/>
        
        <!-- Go To Declaration Handler -->
        <gotoDeclarationHandler
                implementation="com.mb.mbplugin.karate.navigation.KarateGoToSymbolProvider"/>
        
        <!-- Color Settings Page -->
        <colorSettingsPage
                implementation="com.mb.mbplugin.karate.psi.GherkinColorsPage"/>
        
        <!-- Commenter -->
        <lang.commenter language="Karate"
                        implementationClass="com.mb.mbplugin.karate.psi.GherkinCommenter"/>
        
        <!-- Feature File Index -->
        <fileBasedIndex implementation="com.mb.mbplugin.karate.index.KarateFeatureIndex"/>
        
        <!-- Tag Completion Contributor -->
        <completion.contributor language="Karate"
                               implementationClass="com.mb.mbplugin.karate.completion.KarateTagCompletionContributor"/>
        
        <!-- Jira Integration Settings -->
        <projectConfigurable
                groupId="tools"
                displayName="Jira Integration"
                id="com.mb.mbplugin.settings.JiraSettingsConfigurable"
                implementation="com.mb.mbplugin.settings.JiraSettingsConfigurable"/>
        
        <!-- Jira Issue Intention Actions -->
        <intentionAction>
            <category>Jira Integration</category>
            <className>com.mb.mbplugin.jira.OpenJiraIssueIntention</className>
        </intentionAction>
        
        <intentionAction>
            <category>Jira Integration</category>
            <className>com.mb.mbplugin.jira.OpenMultipleJiraIssuesIntention</className>
        </intentionAction>
        
        <!-- Jira Issue Line Marker Provider -->
        <codeInsight.lineMarkerProvider language="Karate"
                                        implementationClass="com.mb.mbplugin.jira.JiraIssueLineMarkerProvider"/>
        
        <!-- Karate Feature Documentation Provider -->
        <lang.documentationProvider language="Karate"
                                   implementationClass="com.mb.mbplugin.karate.documentation.KarateFeatureDocumentationProvider"/>
        
        <!-- Code Formatting Support -->
        <lang.formatter language="Karate"
                       implementationClass="com.mb.mbplugin.karate.formatting.KarateFormattingModelBuilder"/>

        <!-- Post Format Processor -->
        <postFormatProcessor 
            implementation="com.mb.mbplugin.karate.formatting.KaratePostFormatProcessor"/>
    </extensions>
    
    <!-- Actions -->
    <actions>
        <action id="FormatKarateTables" 
                class="com.mb.mbplugin.karate.actions.FormatKarateTablesAction" 
                text="Format Karate Tables" 
                description="Format tables in Karate feature files">
            <add-to-group group-id="CodeFormatGroup" anchor="after" relative-to-action="ReformatCode"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift T"/>
        </action>
    </actions>
</idea-plugin>